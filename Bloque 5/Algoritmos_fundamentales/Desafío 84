def ordenar_por_promedio(estudiantes):
    """
    Ordena la lista de estudiantes por promedio de mayor a menor
    usando el algoritmo de ordenamiento por selección.
    
    Parámetro:
        estudiantes: lista de tuplas (nombre, promedio)
    
    Retorna:
        Lista ordenada de estudiantes
    """
    n = len(estudiantes)
    for i in range(n):
        # Suponemos que el máximo está en la posición i
        indice_max = i
        for j in range(i + 1, n):
            if estudiantes[j][1] > estudiantes[indice_max][1]:
                indice_max = j
        # Intercambiamos si encontramos un promedio mayor
        estudiantes[i], estudiantes[indice_max] = estudiantes[indice_max], estudiantes[i]
    return estudiantes

# Ejemplo de uso
lista_estudiantes = [
    ("Ana", 8.5),
    ("Bruno", 9.2),
    ("Carla", 7.8),
    ("Daniel", 9.7),
    ("Elena", 8.9)
]

ordenados = ordenar_por_promedio(lista_estudiantes)
for nombre, promedio in ordenados:
    print(f"{nombre}: {promedio}")
