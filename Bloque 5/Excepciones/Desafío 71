# Desafío 71: Lectura segura de archivos de texto

# Nombre del archivo a abrir
nombre_archivo = "datos.txt"

try:
    # Intenta abrir el archivo en modo lectura
    archivo = open(nombre_archivo, "r", encoding="utf-8")

    # Lee y muestra el contenido
    contenido = archivo.read()
    print("Contenido del archivo:")
    print(contenido)

except FileNotFoundError:
    # Se activa si el archivo no existe
    print(f" Error: El archivo '{nombre_archivo}' no fue encontrado.")

except IOError:
    # Se activa si hay un problema de entrada/salida
    print(f"Error: No se pudo leer el archivo '{nombre_archivo}'.")

except Exception as e:
    # Captura cualquier otro error inesperado
    print(f"Error inesperado: {e}")

finally:
    # Asegura el cierre del archivo si fue abierto
    try:
        archivo.close()
        print("Archivo cerrado correctamente.")
    except:
        print("No fue necesario cerrar el archivo (no se abrió).")
